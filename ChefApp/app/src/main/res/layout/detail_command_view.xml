<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commandColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:background="@color/detail_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/commandNumber"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:fontFamily="serif"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:text="1"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/commandName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="SANDWISH"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/commandPrice"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:fontFamily="serif"
            android:gravity="center"
            android:paddingRight="6dp"
            android:text="20 MAD"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/commandDetailRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minHeight="100dp" />

        <TextView
            android:id="@+id/commandTime"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:fontFamily="serif"
            android:gravity="center|bottom"
            android:paddingBottom="5dp"
            android:text="x99"
            android:textColor="@android:color/background_dark"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>